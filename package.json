{
    "name": "injest",
    "description": "Makes your Jest tests more digestible",
    "license": "MIT",
    "version": "0.1.4",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com:madewithlove/injest.git"
    },
    "keywords": ["jest", "test", "utilities"],
    "author": {
        "name": "Madewithlove",
        "email": "heroes@madewithlove.be"
    },
    "dependencies": {
        "@types/enzyme": "^3.1.5",
        "@types/jest": "^21.1.8",
        "enzyme": "^3.2.0",
        "enzyme-to-json": "^3.2.2",
        "jest-enzyme": "^4.0.1"
    },
    "devDependencies": {
        "enzyme-adapter-react-16": "^1.1.0",
        "immutable": "^3.8.1",
        "jest": "^21.1.0",
        "prettier": "^1.7.0",
        "react": "^16.1.1",
        "react-dom": "^16.1.1",
        "react-redux": "^5.0.5",
        "react-test-renderer": "^16.1.1",
        "redux": "^3.7.2",
        "redux-saga": "^0.16.0",
        "ts-jest": "^21.0.1",
        "typescript": "^2.5.2"
    },
    "peerDependencies": {
        "jest": "*"
    },
    "scripts": {
        "build": "rm -rf dist && tsc",
        "build:watch": "npm run build -- --watch",
        "postversion": "git push; git push --tags; npm publish",
        "test": "jest",
        "lint": "prettier '{src/**/*.{ts,tsx},./*.{json,md,js}}' --write"
    },
    "jest": {
        "moduleFileExtensions": ["ts", "tsx", "js", "json"],
        "setupFiles": ["./src/__dummies__/react.ts"],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
