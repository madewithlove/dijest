{
  "name": "injest",
  "description": "Makes your Jest tests more digestible",
  "license": "MIT",
  "version": "0.1.3",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:madewithlove/injest.git"
  },
  "keywords": [
    "jest",
    "test",
    "utilities"
  ],
  "author": {
    "name": "Madewithlove",
    "email": "heroes@madewithlove.be"
  },
  "dependencies": {
    "@types/enzyme": "^2.8.7",
    "@types/jest": "^20.0.8",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.6.0",
    "jest-enzyme": "^3.8.2"
  },
  "devDependencies": {
    "jest": "^21.1.0",
    "prettier": "^1.7.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-test-renderer": "^15.6.1",
    "redux": "^3.7.2",
    "redux-saga": "^0.15.6",
    "ts-jest": "^21.0.1",
    "typescript": "^2.5.2"
  },
  "peerDependencies": {
    "jest": "*"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "npm run build -- --watch",
    "postversion": "git push; git push --tags; npm publish",
    "test": "jest",
    "lint": "prettier 'src/**/*.{ts,tsx}' --write --tab-width 4 --single-quote --trailing-comma all"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
